pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the desired branch from the Git repository
                checkout([$class: 'GitSCM', branches: [[name: 'main']], 
                          userRemoteConfigs: [[url: 'https://github.com/gnanieswar-ola/Jenkins-Zero-To-Hero.git']]])
            }
        }
        
        stage('Print Directory Contents') {
            steps {
                sh 'ls -al'
            }
        }
    }
}
